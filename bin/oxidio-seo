 */

exit(call_user_func(require getcwd() . '/vendor/autoload.php', static function () {
    $cli = new Php\Cli(Php\Cli::di(Php\VENDOR\OXIDIO\MODULE_SEO, Oxidio::di()));
    $cli->command('sitemap', new Oxidio\Seo\Cli\SiteMap(), ['scope']);
    return $cli->run();
}));
